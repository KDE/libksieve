require "fileinto";
require "vacation-seconds";
require "vacation";

#SCRIPTNAME: Script part 0
# Move spam to spam folder
if header :contains "X-Spam-Flag" "YES"
{
    fileinto "spam";
    # Stop here so that we do not reply on spams
    stop;
} 

